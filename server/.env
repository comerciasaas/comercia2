# Database Configuration
# DB_TYPE pode ser 'mysql' ou 'postgresql'
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=ai_agents_saas

# Configuração PostgreSQL (alternativa)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_NAME=ai_agents_saas

# JWT Configuration
JWT_SECRET=ai_agents_saas_jwt_secret_key_2025_production_ready

# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys (configure estas chaves para integração real)
# Para obter as chaves:
# OpenAI: https://platform.openai.com/api-keys
# Google Gemini: https://makersuite.google.com/app/apikey
# Hugging Face: https://huggingface.co/settings/tokens
OPENAI_API_KEY=sk-proj-your-openai-key-here
GOOGLE_GEMINI_API_KEY=your-gemini-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-key-here

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Security
SESSION_SECRET=ai_agents_saas_session_secret_2025
ENCRYPTION_KEY=ai_agents_saas_encryption_key_32_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info

# WhatsApp Business API Configuration
# Para obter as credenciais:
# 1. Acesse https://developers.facebook.com/
# 2. Crie um app Business
# 3. Adicione o produto WhatsApp Business API
# 4. Configure o webhook e obtenha o token
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id-here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token-here
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret-here
WHATSAPP_APP_SECRET=your_app_secret_here
WHATSAPP_API_VERSION=v18.0
WHATSAPP_BASE_URL=https://graph.facebook.com

# Internal API Security
INTERNAL_API_KEY=your_internal_api_key_here_generate_strong_key